<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:vm="clr-namespace:WoerterLernen.ViewModels"
             x:Class="WoerterLernen.TestPage"
             BackgroundColor="#fffcbd">

    <ContentPage.BindingContext>
        <vm:TestPageViewModel/>
    </ContentPage.BindingContext>
    
    <StackLayout VerticalOptions="FillAndExpand">
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" MinimumHeightRequest="200" Padding="20">
            <!--<Label Text="{Binding PrevX, StringFormat='PrevX: {0}'}"/>
            <Label Text="{Binding X, StringFormat='X: {0}'}"/>
            <Label Text="{Binding Y, StringFormat='Y: {0}'}"/>
            <Label Text="{Binding Rotation, StringFormat='Rotation: {0}'}"/>
            <Label Text="{Binding Status, StringFormat='Status: {0}'}"/>-->
            <Frame x:Name="WordFrame" BackgroundColor="#ffffff" MinimumHeightRequest="200" Padding="0" CornerRadius="20" HasShadow="False">
                <StackLayout VerticalOptions="Fill" HorizontalOptions="Fill" >
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Pruefen_Clicked"/>
                        <PanGestureRecognizer PanUpdated="PanGestureRecognizer_PanUpdated"/>
                    </StackLayout.GestureRecognizers>
                    <Label x:Name="ErsteWort" Text="FirstWord" HorizontalTextAlignment="Center"  HorizontalOptions="Center" FontSize="32" TextColor="Black" FontAttributes="Bold" LineBreakMode="WordWrap"/>
                    <Label x:Name="ErsteTranskription" Text="Transkription" HorizontalOptions="Center" FontSize="26" FontAttributes="Italic"/>
                    <Label x:Name="Ubersetzung" Text="SecondWord" HorizontalTextAlignment="Center" HorizontalOptions="Center" FontSize="32" IsVisible="False" TextColor="Black" LineBreakMode="WordWrap"/>
                </StackLayout>
            </Frame>
            <StackLayout x:Name="AntwortKnoepfe" Orientation="Horizontal" HorizontalOptions="FillAndExpand" IsVisible="False" >
                <Button x:Name="Richtig" Text="✓" HorizontalOptions="FillAndExpand" FontSize="35" Clicked="Richtig_Clicked" BackgroundColor="ForestGreen" TextColor="White"
                    CornerRadius="15" Margin="15"/>
                <Button x:Name="Falsch" Text="×" HorizontalOptions="FillAndExpand" FontSize="45" Clicked="Falsch_Clicked" BackgroundColor="IndianRed" TextColor="White" 
                    CornerRadius="15" Margin="15"/>
            </StackLayout>
        </StackLayout>
        <Label x:Name="Fortschritt" HorizontalOptions="Center" VerticalOptions="End" FontSize="26" TextColor="Black" FontAttributes="Bold" AbsoluteLayout.LayoutBounds=".5,1,.5,1"/>
    </StackLayout>
</ContentPage>
