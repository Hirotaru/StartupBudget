@model IEnumerable<StartupBudget.Web.ViewModels.Developer.SimpleDeveloperViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Developers</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WeekRate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Qualification)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WeekRate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Qualification)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, null) |
            @Html.ActionLink("Details", "Id", new { id = item.Id }, null) |
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, null)
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("Create New", "Create", "Developer", null, new { @class = "btn btn-primary btn-large" })
</p>